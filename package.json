{
	"name": "library-management-api",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"dev": "nodemon --ext ts,yaml,yml,json --exec tsx src/index.ts",
		"start": "node src/index.js",
		"build": "tsc && copyfiles 'src/**/*.swagger.yaml' dist/",
		"test": "mocha --timeout 10000 --require tsx 'test/**/*.test.ts' --exit",
		"test:ci": "npx nyc --reporter=lcov --reporter=text-lcov mocha --timeout 10000 --require tsx 'test/**/*.test.ts' --exit -- --coverage",
		"prettier": "prettier --write .",
		"checkPrettier": "prettier --check .",
		"lint": "eslint . --ext .ts",
		"lint:fix": " eslint . --ext .ts --fix ",
		"typeorm": "typeorm-ts-node-commonjs",
		"migration:generate": "npm run typeorm migration:generate -- -d src/utils/dbConnection",
		"migration:run": "npm run typeorm migration:run -- -d src/utils/dbConnection",
		"migration:show": "npm run typeorm migration:show -- -d src/utils/dbConnection",
		"migration:revert": "npm run typeorm migration:revert -- -d src/utils/dbConnection",
		"database:delete": "npm run typeorm schema:drop -- -d ./src/utils/dbConnection"
	},
	"author": "",
	"license": "ISC",
	"simple-git-hooks": {
		"pre-commit": "npm run lint"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.6",
		"@types/chai": "^5.0.0",
		"@types/chai-http": "^3.0.5",
		"@types/chalk": "^0.4.31",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/mocha": "^10.0.7",
		"@types/node": "^20.16.5",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.6",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^7.2.0",
		"@typescript-eslint/parser": "^7.2.0",
		"chai": "^5.1.1",
		"chai-http": "^5.0.0",
		"copyfiles": "^2.4.1",
		"eslint": "^8.57.1",
		"eslint-config-airbnb-typescript": "^18.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-unused-imports": "^4.1.4",
		"esm": "^3.2.25",
		"mocha": "^10.7.3",
		"nodemon": "3.1.4",
		"nyc": "^17.1.0",
		"prettier": "^3.3.3",
		"simple-git-hooks": "^2.11.1",
		"ts-node": "^10.9.2",
		"tsx": "^4.16.2",
		"typescript": "^5.4.5"
	},
	"dependencies": {
		"body-parser": "^1.20.2",
		"chalk": "^4.1.2",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"express-rate-limit": "^7.3.1",
		"joi": "^17.13.3",
		"moment": "^2.30.1",
		"pg": "^8.12.0",
		"reflect-metadata": "^0.1.14",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1",
		"typeorm": "^0.3.20"
	}
}
